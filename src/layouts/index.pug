html
  head
    title Kairos Center for Well-Being - Home
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    //if lte IE 8
      script(src='assets/js/ie/html5shiv.js')
    link(rel='stylesheet', href='assets/css/main.css')
    //if lte IE 9
      link(rel='stylesheet', href='assets/css/ie9.css')
    //if lte IE 8
      link(rel='stylesheet', href='assets/css/ie8.css')
  body
    // Page Wrapper
    #page-wrapper
      // Header
      header#header.alt
        h1
          a(href='index.html') Kairos Center for Well-being
        nav
          a(href='#menu') Menu
      // Menu
      include ../partials/menu.pug
      // Banner
      section#banner
        .inner
          //- .logo
          //-   span.icon.fa-diamond
          h2
            .headline Kairos
            span Center for Well-being
          p Therapeutic massage therapy in the Upper St Croix Valley
      // Wrapper
      section#wrapper
        each entry, index in data.entries
          - var sectionNum = index + 1
          - var classAttr = `wrapper spotlight style${sectionNum}` + (sectionNum%2 === 0 ? ' alt' : '')
          - var page = entry.fields.page
          - var imgSrc = 'images/pic0' + sectionNum + '.jpg'

          section(
            id=`#section-${sectionNum}`
            class=classAttr
          )
            .inner
              a.image(href='#')
                img(src=imgSrc, alt='')
              .content
                h2.major #{entry.fields.title}
                p #{entry.fields.description}
                if page
                  a.special(href=page.fields.title.replace(/\s+/g, '-').toLowerCase()) #{entry.fields.linkText}

      // Footer
      section#footer.alt
        include ../partials/footer.pug
    // Scripts
    include ../partials/js.pug